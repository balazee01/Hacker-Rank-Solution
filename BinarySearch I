//  Approach I (Need to be work on)

package com.data_structure.search;

public class BinarySearch {
	
	private static int binarySearch(int[] arr, int low,int high,int element) {
			
		if(high!=low || element==arr[low]) {
			
			int mid=(low+high)/2;
			
			if(arr[mid]==element) {
				return mid;
			}
			if(arr[mid]<element) {
				
				return binarySearch(arr,mid+1,high,element);
			}
			else {
				return binarySearch(arr,low,mid-1,element);
			}
		}
	      return -1;
	}
	public static void main(String[] args) {
		
		int[] arr= {2,3,4,5,6,7,8,9};

		int len=arr.length;
		int searchElement=10;
		
		int ans=binarySearch(arr,0,len-1,searchElement);
		if(ans==-1)
			System.out.println("element is not found in list");
		else
			System.out.println("Element is found at index "+(++ans));
	
	}

}

